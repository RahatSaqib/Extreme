<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="ChatSDKTheme">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:textColorPrimary">@color/tool</item>
        <item name="colorControlNormal">@color/text_primary</item>

        <item name="outcomingDefaultBubbleColor">#2D8659</item>
        <item name="outcomingDefaultBubblePressedColor">#2D8659</item>

        <item name="actionBarBackgroundColor">@color/primary</item>
        <item name="actionBarTextColor">@color/white</item>
    </style>
    <style name="Elegentnumber" >
        <item name="colorPrimary">@color/elegent</item>
        <item name="colorPrimaryDark">@color/elegent</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="ToolBarStyle" parent="Theme.AppCompat">
        <item name="android:textColorPrimary">@color/tool</item>
        <item name="android:textColorSecondary">@color/tool</item>


        <item name="drawerArrowStyle">@color/tool</item>
    </style>

    <style name="SplashScreen" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_activity</item>
    </style>


    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>


    </style>

    <style name="CustomActionBar" parent="Theme.AppCompat">
        <item name="android:background">@android:color/white</item>
        <item name="android:titleTextStyle">@style/CustomActionBar</item>
    </style>

    <style name="CustomTextColor" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/tool</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />


    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="FullscreenTheme" parent="AppTheme">
        <item name="android:actionBarStyle">@style/FullscreenActionBarStyle</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
        <item name="metaButtonBarStyle">?android:attr/buttonBarStyle</item>
        <item name="metaButtonBarButtonStyle">?android:attr/buttonBarButtonStyle</item>
    </style>

    <style name="FullscreenActionBarStyle" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/black_overlay</item>
    </style>

</resources>