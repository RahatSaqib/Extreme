<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.project.ramf.rams.AllMedicine">

    <RelativeLayout
        android:id="@+id/r5"
        android:layout_width="359dp"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="@color/colorPrimaryDark">

        <com.rey.material.widget.EditText
            android:id="@+id/search_product_name"
            android:layout_width="254dp"
            android:layout_height="40dp"
            android:layout_centerInParent="true"
            android:layout_marginStart="17dp"
            android:background="@drawable/border1"
            android:hint="Search Products"
            android:padding="9dp"
            android:textColorHint="@color/texthint"
            android:textSize="18dp" />

        <Button
            android:id="@+id/search_btn"
            android:layout_width="38dp"
            android:layout_height="37dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="7dp"
            android:layout_toRightOf="@+id/search_product_name"
            android:background="@drawable/baseline_search_black_18dp"
            android:backgroundTint="@color/textbox"
            android:padding="9dp"
            android:textColor="@color/textbox"
            android:textSize="16dp"
            android:textStyle="bold" />

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/r6"
        android:layout_width="317dp"
        android:layout_height="182dp"
        android:layout_below="@id/r5"
        android:layout_centerHorizontal="true">

        <LinearLayout
            android:id="@+id/l4"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:layout_below="@id/l3"
            android:orientation="horizontal">

            <Button
                android:id="@+id/Y"
                android:layout_width="30dp"
                android:layout_height="32dp"
                android:layout_below="@id/seacrchind"

                android:layout_margin="5dp"
                android:background="@drawable/border1"
                android:backgroundTint="@color/colorAccent"
                android:text="Y"
                android:textColor="#fff" />

            <Button
                android:id="@+id/Z"
                android:layout_width="30dp"
                android:layout_height="32dp"
                android:layout_below="@id/seacrchind"
                android:layout_margin="5dp"
                android:background="@drawable/border1"
                android:backgroundTint="@color/colorAccent"
                android:text="Z"
                android:textColor="#fff" />




        </LinearLayout>

        <TextView
            android:id="@+id/seacrchind"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="5dp"
            android:text="Search By Indexing." />

        <LinearLayout
            android:id="@+id/l1"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:layout_below="@id/seacrchind"
            android:orientation="horizontal">

            <Button
                android:id="@+id/A"
                android:layout_width="30dp"
                android:layout_height="32dp"
                android:layout_below="@id/seacrchind"

                android:layout_margin="5dp"
                android:background="@drawable/border1"
                android:backgroundTint="@color/colorAccent"
                android:text="A"
                android:textColor="#fff" />

            <Button
                android:id="@+id/B"
                android:layout_width="30dp"
                android:layout_height="32dp"
                android:layout_below="@id/seacrchind"
                android:layout_margin="5dp"
                android:background="@drawable/border1"
                android:backgroundTint="@color/colorAccent"
                android:text="B"
                android:textColor="#fff" />

            <Button
                android:id="@+id/C"
                android:layout_width="30dp"
                android:layout_height="32dp"
                android:layout_below="@id/seacrchind"
                android:layout_margin="5dp"
                android:background="@drawable/border1"
                android:backgroundTint="@color/colorAccent"
                android:text="C"
                android:textColor="#fff" />

            <Button
                android:id="@+id/D"
                android:layout_width="30dp"
                android:layout_height="32dp"
                android:layout_below="@id/seacrchind"
                android:layout_margin="5dp"
                android:background="@drawable/border1"
                android:backgroundTint="@color/colorAccent"
                android:text="D"
                android:textColor="#fff" />

            <Button
                android:id="@+id/E"
                android:layout_width="30dp"
                android:layout_height="32dp"
                android:layout_below="@id/seacrchind"
                android:layout_margin="5dp"
                android:background="@drawable/border1"
                android:backgroundTint="@color/colorAccent"
                android:text="E"
                android:textColor="#fff" />

            <Button
                android:id="@+id/F"
                android:layout_width="30dp"
                android:layout_height="32dp"
                android:layout_below="@id/seacrchind"
                android:layout_margin="5dp"
                android:background="@drawable/border1"
                android:backgroundTint="@color/colorAccent"
                android:text="F"
                android:textColor="#fff" />

            <Button
                android:id="@+id/G"
                android:layout_width="30dp"
                android:layout_height="32dp"
                android:layout_below="@id/seacrchind"
                android:layout_margin="5dp"
                android:background="@drawable/border1"
                android:backgroundTint="@color/colorAccent"
                android:text="G"
                android:textColor="#fff" />

            <Button
                android:id="@+id/H"
                android:layout_width="30dp"
                android:layout_height="32dp"
                android:layout_below="@id/seacrchind"
                android:layout_margin="5dp"
                android:background="@drawable/border1"
                android:backgroundTint="@color/colorAccent"
                android:text="H"
                android:textColor="#fff" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/l2"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:layout_below="@id/l1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/I"
                android:layout_width="30dp"
                android:layout_height="32dp"
                android:layout_below="@id/seacrchind"

                android:layout_margin="5dp"
                android:background="@drawable/border1"
                android:backgroundTint="@color/colorAccent"
                android:text="I"
                android:textColor="#fff" />

            <Button
                android:id="@+id/J"
                android:layout_width="30dp"
                android:layout_height="32dp"
                android:layout_below="@id/seacrchind"
                android:layout_margin="5dp"
                android:background="@drawable/border1"
                android:backgroundTint="@color/colorAccent"
                android:text="J"
                android:textColor="#fff" />

            <Button
                android:id="@+id/K"
                android:layout_width="30dp"
                android:layout_height="32dp"
                android:layout_below="@id/seacrchind"
                android:layout_margin="5dp"
                android:background="@drawable/border1"
                android:backgroundTint="@color/colorAccent"
                android:text="K"
                android:textColor="#fff" />

            <Button
                android:id="@+id/L"
                android:layout_width="30dp"
                android:layout_height="32dp"
                android:layout_below="@id/seacrchind"
                android:layout_margin="5dp"
                android:background="@drawable/border1"
                android:backgroundTint="@color/colorAccent"
                android:text="L"
                android:textColor="#fff" />

            <Button
                android:id="@+id/M"
                android:layout_width="30dp"
                android:layout_height="32dp"
                android:layout_below="@id/seacrchind"
                android:layout_margin="5dp"
                android:background="@drawable/border1"
                android:backgroundTint="@color/colorAccent"
                android:text="M"
                android:textColor="#fff" />

            <Button
                android:id="@+id/N"
                android:layout_width="30dp"
                android:layout_height="32dp"
                android:layout_below="@id/seacrchind"
                android:layout_margin="5dp"
                android:background="@drawable/border1"
                android:backgroundTint="@color/colorAccent"
                android:text="N"
                android:textColor="#fff" />

            <Button
                android:id="@+id/O"
                android:layout_width="30dp"
                android:layout_height="32dp"
                android:layout_below="@id/seacrchind"
                android:layout_margin="5dp"
