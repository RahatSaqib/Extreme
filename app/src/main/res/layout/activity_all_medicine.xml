                android:backgroundTint="@color/colorAccent"
                android:text="O"
                android:textColor="#fff" />

            <Button
                android:id="@+id/P"
                android:layout_width="30dp"
                android:layout_height="32dp"
                android:layout_below="@id/seacrchind"
                android:layout_margin="5dp"
                android:background="@drawable/border1"
                android:backgroundTint="@color/colorAccent"
                android:text="P"
                android:textColor="#fff" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/l3"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:layout_below="@id/l2"
            android:orientation="horizontal">

            <Button
                android:id="@+id/Q"
                android:layout_width="30dp"
                android:layout_height="32dp"
                android:layout_below="@id/seacrchind"

                android:layout_margin="5dp"
                android:background="@drawable/border1"
                android:backgroundTint="@color/colorAccent"
                android:text="Q"
                android:textColor="#fff" />

            <Button
                android:id="@+id/Re"
                android:layout_width="30dp"
                android:layout_height="32dp"
                android:layout_below="@id/seacrchind"
                android:layout_margin="5dp"
                android:background="@drawable/border1"
                android:backgroundTint="@color/colorAccent"
                android:text="R"
                android:textColor="#fff" />

            <Button
                android:id="@+id/S"
                android:layout_width="30dp"
                android:layout_height="32dp"
                android:layout_below="@id/seacrchind"
                android:layout_margin="5dp"
                android:background="@drawable/border1"
                android:backgroundTint="@color/colorAccent"
                android:text="S"
                android:textColor="#fff" />

            <Button
                android:id="@+id/T"
                android:layout_width="30dp"
                android:layout_height="32dp"
                android:layout_below="@id/seacrchind"
                android:layout_margin="5dp"
                android:background="@drawable/border1"
                android:backgroundTint="@color/colorAccent"
                android:text="T"
                android:textColor="#fff" />

            <Button
                android:id="@+id/U"
                android:layout_width="30dp"
                android:layout_height="32dp"
                android:layout_below="@id/seacrchind"
                android:layout_margin="5dp"
                android:background="@drawable/border1"
                android:backgroundTint="@color/colorAccent"
                android:text="U"
                android:textColor="#fff" />

            <Button
                android:id="@+id/V"
                android:layout_width="30dp"
                android:layout_height="32dp"
                android:layout_below="@id/seacrchind"
                android:layout_margin="5dp"
                android:background="@drawable/border1"
                android:backgroundTint="@color/colorAccent"
                android:text="V"
                android:textColor="#fff" />

            <Button
                android:id="@+id/W"
                android:layout_width="30dp"
                android:layout_height="32dp"
                android:layout_below="@id/seacrchind"
                android:layout_margin="5dp"
                android:background="@drawable/border1"
                android:backgroundTint="@color/colorAccent"
                android:text="W"
                android:textColor="#fff" />

            <Button
                android:id="@+id/X"
                android:layout_width="30dp"
                android:layout_height="32dp"
                android:layout_below="@id/seacrchind"
                android:layout_margin="5dp"
                android:background="@drawable/border1"
                android:backgroundTint="@color/colorAccent"
                android:text="X"
                android:textColor="#fff" />


        </LinearLayout>


    </RelativeLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/search_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/r6"></androidx.recyclerview.widget.RecyclerView>

</RelativeLayout>