<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    >

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/app_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true"
        android:theme="@style/AppTheme.AppBarOverlay">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="57dp"
            android:background="#FFFFFF"
            android:theme="@style/ToolBarStyle"
            app:layout_collapseMode="pin"
            app:navigationIcon="?attr/actionModeCloseDrawable"
            app:popupTheme="@style/AppTheme.PopupOverlay" />



    </com.google.android.material.appbar.AppBarLayout>

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/app_bar"

        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:padding="10dp"
        app:srcCompat="@drawable/logoo" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/imageView4">

        <TextView
            android:id="@+id/textView9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="20dp"
            android:text="All Categories"
            android:textAlignment="center"
            android:textSize="20sp" />

        <Button
            android:id="@+id/corona"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:background="@drawable/categories"
            android:paddingStart="10sp"
            android:text="Surgical Equipment"
            android:textAlignment="viewStart"
            android:textColor="@color/textbox" />

        <Button
            android:id="@+id/homeo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginBottom="2dp"
            android:background="@drawable/categories"
            android:paddingStart="10sp"
            android:text="Personal Equipment"
            android:textAlignment="viewStart"
            android:textColor="@color/textbox" />

        <Button
            android:id="@+id/fit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginBottom="2dp"
            android:background="@drawable/categories"
            android:paddingStart="10sp"
            android:text="Capsule"
            android:textAlignment="viewStart"
            android:textColor="@color/textbox" />

        <Button
            android:id="@+id/diabetes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginBottom="2dp"
            android:background="@drawable/categories"
            android:paddingStart="10sp"
            android:text="Tablet"
            android:textAlignment="viewStart"
            android:textColor="@color/textbox" />

        <Button
            android:id="@+id/health"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginBottom="2dp"
            android:background="@drawable/categories"
            android:paddingStart="10sp"
            android:text="Syrup"
            android:textAlignment="viewStart"
            android:textColor="@color/textbox" />

        <Button
            android:id="@+id/personal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginBottom="2dp"
            android:background="@drawable/categories"
            android:paddingStart="10sp"
            android:text="Oinment"
            android:textAlignment="viewStart"
            android:textColor="@color/textbox" />

    </LinearLayout>



</RelativeLayout>