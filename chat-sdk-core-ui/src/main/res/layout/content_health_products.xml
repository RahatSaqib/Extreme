<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="sdk.chat.ui.HealthProducts"
    tools:showIn="@layout/activity_health_products">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:padding="20dp"
            android:text="All Categories"
            android:textAlignment="center"
            android:textSize="20sp" />

        <Button
            android:id="@+id/corona"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:background="@drawable/categories"
            android:paddingStart="10sp"
            android:text="Surgical Equipment"
            android:textAlignment="viewStart"
            android:textColor="@color/textbox" />

        <Button
            android:id="@+id/homeo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginBottom="2dp"
            android:background="@drawable/categories"
            android:paddingStart="10sp"
            android:text="Personal Equipment"
            android:textAlignment="viewStart"
            android:textColor="@color/textbox" />

        <Button
            android:id="@+id/fit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginBottom="2dp"
            android:background="@drawable/categories"
            android:paddingStart="10sp"
            android:text="Capsule"
            android:textAlignment="viewStart"
            android:textColor="@color/textbox" />

        <Button
            android:id="@+id/diabetes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginBottom="2dp"
            android:background="@drawable/categories"
            android:paddingStart="10sp"
            android:text="Tablet"
            android:textAlignment="viewStart"
            android:textColor="@color/textbox" />

        <Button
            android:id="@+id/health"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginBottom="2dp"
            android:background="@drawable/categories"
            android:paddingStart="10sp"
            android:text="Syrup"
            android:textAlignment="viewStart"
            android:textColor="@color/textbox" />

        <Button
            android:id="@+id/personal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginBottom="2dp"
            android:background="@drawable/categories"
            android:paddingStart="10sp"
            android:text="Oinment"
            android:textAlignment="viewStart"
            android:textColor="@color/textbox" />

    </LinearLayout>
</androidx.core.widget.NestedScrollView>